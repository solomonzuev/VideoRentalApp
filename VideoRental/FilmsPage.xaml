    <DockPanel Margin="10">
        <DataGrid x:Name="DGridVideos" Style="{StaticResource MaterialDesignDataGrid}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Название" Binding="{Binding VideoName}" />
                <DataGridTextColumn Width="*" Header="Жанр" Binding="{Binding VideoName}" />
                <DataGridTextColumn Width="*" Header="Автор" Binding="{Binding VideoName}" />
                <DataGridTextColumn Width="*" Binding="{Binding VideoName}">
                    <DataGridTextColumn.Header>
                        <TextBlock TextWrapping="Wrap" Text="Возрастной рейтинг" />
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Width="*" Header="Цена за 3 дня" Binding="{Binding Price3Days}" />
                <DataGridTemplateColumn Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                               materialDesign:ButtonAssist.CornerRadius="5"
                               IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                               ToolTip="Посмотреть подробные сведения о фильме" 
                               Content="Подробнее" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
